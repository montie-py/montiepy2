@page
@using montiepy2.Business.Models
@model montiepy2.Core.Pages.Private.AddReviewEntry

<p class="text-2xl font-bold">Add new review item</p>
<br>
<form asp-action="AddReviewEntry" asp-controller="Private" method="post">
    <div class="form-group">
        <input type="text" name="ItemTitle" required class="form-control" id="title" placeholder="Book Title">
    </div>
    <br>
    <div class="form-group">
        <textarea class="form-control" name="ReviewText" required id="text" rows="6" placeholder="Review Text"></textarea>
    </div>
    <br>
    <div class="form-group">
    <label for="reviewType">Review type</label>
    <select class="form-control" id="reviewType" name="Type" disabled>
        <option value="@ReviewType.Books">Books</option>
        <option value="@ReviewType.Music">Music</option>
    </select>
    </div>
    <input type="hidden" name="Type" value="@ReviewType.Books">
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>