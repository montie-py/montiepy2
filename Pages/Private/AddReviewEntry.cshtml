@page
@using montiepy2.Models
@model montiepy2.Pages.Private.AddReviewEntry

<p class="text-2xl font-bold">Add new review item</p>
<br>
<form asp-action="AddBlogEntry" asp-controller="Private" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="Title" required class="form-control" id="title" placeholder="ItemTitle">
    </div>
    <br>
    <div class="form-group">
        <label for="text">Text</label>
        <textarea class="form-control" name="ReviewText" required id="text" rows="6"></textarea>
    </div>
    <div class="form-group">
    using montiepy2.Models;
    <label for="reviewType">Review type</label>
    <select class="form-control" id="reviewType" name="Type" disabled>
        <option value="@ReviewType.Books">Books</option>
        <option value="@ReviewType.Music">Music</option>
    </select>
    </div>
    <input type="hidden" name="Type" value="@ReviewType.Books">
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>