@page
@model montiepy2.Pages.Private.AddBlogEntry
<p class="text-2xl font-bold">Add new blog item</p>
<br>
<form asp-action="AddBlogEntry" asp-controller="Private" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="Title" required class="form-control" id="title" placeholder="Title">
    </div>
    <br>
    <div class="form-group">
        <label for="text">Text</label>
        <textarea class="form-control" name="Text" required id="text" rows="6"></textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>