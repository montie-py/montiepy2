@model montiepy2.Models.RadioEntry
@{
    var fileExtension = System.IO.Path.GetExtension(@Model.Url);
}
<div class="post inline-block mb-2">
    <span>@(fileExtension.Substring(1).Equals("m3u") ? "Download: ": "Listen online: ")</span>
    <a target="_blank" href="@Model.Url" class="text-pantpink text-lg mb-2 underline hover:no-underline cursor-pointer">@Model.Date.ToString("yyyy-MM-dd")</a>
</div>
<br>